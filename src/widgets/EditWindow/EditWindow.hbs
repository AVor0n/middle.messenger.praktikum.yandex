      {{#each fields}}
      {{> textbox label=label type=type}}
      {{/each}}
    </div>

    <div class="edit-window__btns">
      {{!--
      TODO: избавиться от handebars,переписать все компоненты в виде функций, чтоб передавать обработчик параметром
