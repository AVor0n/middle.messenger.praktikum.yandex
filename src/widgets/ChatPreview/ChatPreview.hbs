<div class="chat-preview">
    <img class="chat-preview__avatar" src="{{avatar}}">
    <h3 class="chat-preview__username">{{username}}</h3>
    <p class="chat-preview__message">{{message}}</p>
    <span class="chat-preview__time">{{time}}</span>
    {{#if unread_count}}
    <span class="chat-preview__counter">{{unread_count}}</span>
    {{/if}}
</div>